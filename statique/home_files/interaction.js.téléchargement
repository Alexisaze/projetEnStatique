let ratings = [5, 4, 4];
      let comments = [
        {text: "ğŸ‘ TrÃ¨s bon vendeur, rapide et efficace !", rating: 5},
        {text: "â­ Produit conforme Ã  la description.", rating: 4},
        {text: "ğŸ‘Œ Je recommande fortement.", rating: 4}
      ];
      let currentRating = 0;

      function renderComments() {
        const list = document.getElementById("commentsList");
//        list.innerHTML = "";
